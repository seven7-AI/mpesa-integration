# M-Pesa API credentials
MPESA_CONSUMER_KEY=your_consumer_key
MPESA_CONSUMER_SECRET=your_consumer_secret
MPESA_PASSKEY=your_passkey

# M-Pesa shortcode (5-9 digits for Till or Paybill)
SHORT_CODE=your_shortcode

# M-Pesa account number (optional, defaults to SHORT_CODE for Paybill)
MPESA_ACCOUNT_NUMBER=your_account_number

# Callback URLs for STK Push and Transaction Status
MPESA_CALLBACK_URL=https://your-domain.com/api/mpesa/callback
MPESA_RESULT_URL=https://your-domain.com/api/mpesa/result
MPESA_QUEUE_TIMEOUT_URL=https://your-domain.com/api/mpesa/timeout

# Initiator credentials for Transaction Status API
MPESA_INITIATOR_NAME=your_initiator_name
MPESA_INITIATOR_PASSWORD=your_initiator_password
MPESA_CERTIFICATE_PATH=/path/to/certificate.pem # Get this on the docs section

# API environment
MPESA_ENVIRONMENT=sandbox  # or production

# Optional: Phone number for testing (format: 2547XXXXXXXX or 2541XXXXXXXX)
PHONE_NUMBER=2547XXXXXXXX

# Optional: Timeout and retry settings
MPESA_REQUEST_TIMEOUT=30.0
MPESA_MAX_RETRIES=3
MPESA_RETRY_DELAY=5.0

# Optional: Enable mock mode for testing
MPESA_MOCK=false